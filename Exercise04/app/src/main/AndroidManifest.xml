            android:label="@string/title_activity_form"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <meta-data android:name="com.google.android.maps.v2.API.KEY"
            android:value="AIzaSyBZgyoqcswppUyLrdVuJnOeEQEkrqpQIsA"/>

